{
	"name": "mnio",
	"version": "0.0.3",
	"description": "A real-time multiplayer drawing canvas",
	"author": "Lucas Poulain (ShallowRed)",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ShallowRed/mnio.git"
	},
	"homepage": "https://github.com/ShallowRed/mnio#readme",
	"bugs": {
		"url": "https://github.com/ShallowRed/mnio/issues"
	},
	"engines": {
		"node": ">=12.0.0",
		"npm": ">=6.0.0"
	},
	"type": "module",
	"scripts": {
		"start": "pm2 start ecosystem.start.config.cjs && pm2 logs",
		"bundle": "npm run prod --prefix src",
		"dev:bundle": "npm run dev --prefix src",
		"install:dev": "npm install && npm install --prefix srv && npm install --prefix src",
		"install:prod": "npm install --omit=dev --prefix srv",
		"deploy:setup": "pm2 deploy ecosystem.deploy.config.cjs production setup",
		"pre-deploy": "git commit -am \"Deploying\" && git push origin && git push origin master:deploy",
		"deploy": "pm2 deploy ecosystem.deploy.config.cjs production"
	},
	"exports": {
		"shared": "./shared"
	}
}
