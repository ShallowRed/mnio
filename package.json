{
	"name": "mnio",
	"version": "0.0.3",
	"description": "A real-time multiplayer drawing canvas",
	"author": "Lucas Poulain (ShallowRed)",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ShallowRed/mnio.git"
	},
	"homepage": "https://github.com/ShallowRed/mnio#readme",
	"bugs": {
		"url": "https://github.com/ShallowRed/mnio/issues"
	},
	"engines": {
		"node": ">=12.0.0",
		"npm": ">=6.0.0"
	},
	"scripts": {
		"dev:server": "npm run dev --prefix srv",
		"dev:client": "npm run dev --prefix src",
		"start": "npm run prod --prefix srv",
		"bundle": "npm run prod --prefix src",
		"install:dev": "npm install && npm install --prefix srv && npm install --prefix src",
		"install:prod": "npm install --omit=dev --prefix srv"
	}
}
